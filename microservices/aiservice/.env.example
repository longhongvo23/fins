# Application Settings
APP_NAME=aiservice
APP_VERSION=1.0.0
APP_ENV=development
APP_PORT=8086

# MongoDB Settings
MONGODB_URI=mongodb://mongodb:27017
MONGODB_DATABASE=stockservice
HISTORICAL_PRICE_COLLECTION=historical_price
RECOMMENDATION_COLLECTION=recommendation

# Kafka Settings
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_STOCK_UPDATES=stock.updates
KAFKA_TOPIC_PREDICTIONS=predictions.recommendations
KAFKA_GROUP_ID=aiservice-consumer

# Prophet Model Settings
PROPHET_FORECAST_DAYS=30
PROPHET_CHANGEPOINT_PRIOR_SCALE=0.05
PROPHET_SEASONALITY_MODE=multiplicative
PROPHET_INTERVAL_WIDTH=0.95

# Recommendation Thresholds (%)
STRONG_BUY_THRESHOLD=10.0
BUY_THRESHOLD=5.0
HOLD_THRESHOLD=2.0
SELL_THRESHOLD=-5.0
STRONG_SELL_THRESHOLD=-10.0

# Scheduling
PREDICTION_CRON_SCHEDULE=0 0 * * *  # Daily at midnight
AUTO_PREDICTION_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Service Discovery (Optional - for future integration)
CONSUL_HOST=consul
CONSUL_PORT=8500
SERVICE_DISCOVERY_ENABLED=false
